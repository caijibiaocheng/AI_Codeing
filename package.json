{
  "name": "ai-code-editor",
  "version": "0.1.0",
  "description": "AI-powered code editor like Cursor with chat, API integration, and MCP support",
  "main": "dist/main/main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "npx webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "npx webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "npx webpack --config webpack.main.config.js --mode production",
    "build:renderer": "npx webpack --config webpack.renderer.config.js --mode production",
    "start": "electron .",
    "postinstall": "node scripts/create-placeholder-icon.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win --x64",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/prettier": "^2.7.3",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "iconv-lite": "^0.7.0",
    "jszip": "^3.10.1",
    "monaco-editor": "^0.44.0",
    "openai": "^4.20.0",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-monaco-editor": "^0.55.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.0",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.0"
  },
  "build": {
    "appId": "com.aicodeeditor.app",
    "productName": "AI Code Editor",
    "forceCodeSigning": false,
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "AI Code Editor Team",
      "sign": null,
      "signingHashAlgorithms": [],
      "verifyUpdateCodeSignature": false,
      "signDlls": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI Code Editor",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
